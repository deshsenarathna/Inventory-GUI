<Window x:Class="Hardware.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hardware"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="966">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="194*" />
            
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="155*" />
            <RowDefinition Height="52*" />
            <RowDefinition Height="232*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
               HorizontalAlignment="Left"
               TextAlignment="Center"
               Background="Purple"
               FontWeight="Bold"
               FontSize="25px" 
               Padding="5"
               Text="Hardware Management System" Width="1000"/>

        <StackPanel Grid.Column="0" Grid.RowSpan="4" Background="Purple">

            <TextBlock x:Name="itemstextBox" Grid.Row="1"
           Grid.Column="2"
           Text="Items"
           Height="50"
           HorizontalAlignment="Center"
           Margin="10,150,10,0"
           Padding="5"
           FontSize="25"
           TextAlignment="Center"
           Foreground="White"
           Background="MediumOrchid" 
           Width="170" />
            <TextBlock x:Name="customertextBox"
            Text="Customer"
            Height="50"
            Margin="0,20,0,160"
            Padding="5"
            FontSize="25"
            TextAlignment="Center"
            Foreground="White"
            Background="MediumOrchid" 
            HorizontalAlignment="Center"
            Width="170"  />
            <TextBlock x:Name="dasboardtextBox"
                Text="Dashboard"
                Height="50"
                Padding="5"
                FontSize="25"
                TextAlignment="Center"
                Foreground="White"
                Background="MediumOrchid"
                Width="170" Margin="0,-220,0,0"  />
            <TextBlock x:Name="logouttextBox"
                Text="Log Out"
                Height="50"
                Padding="5"
                FontSize="25"
                TextAlignment="Center"
                Foreground="White"
                Background="MediumOrchid"
                Width="170" Margin="0,-20,0,0" HorizontalAlignment="Center"  />

        </StackPanel>


        <StackPanel Grid.Column="1" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock x:Name="customernametextBlock" Grid.Row="1"
                       Grid.Column="1"
                       Text="Customer Name"
                       Height="50"
                       HorizontalAlignment="Center"
                       Padding="5"
                       FontSize="20"
                       TextAlignment="Center"
                       Foreground="Black"
                       Background="White" 
                       Width="161" Margin="0,60,0,0" />
            <TextBox Grid.Row="1" Grid.Column="2"
           Background="White"
           x:Name="customernametextextBox"
           Height="30"
           Width="170"
           Margin="5,5,5,5"
           Padding="5"/>

        </StackPanel>


        <StackPanel Grid.Column="2" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock x:Name="gendertextBlock" Grid.Row="1"
               Grid.Column="1"
               Text="Gender"
               Height="50"
               HorizontalAlignment="Center"
               Padding="5"
               FontSize="20"
               TextAlignment="Center"
               Foreground="Black"
               Background="White" 
               Width="170" Margin="0,60,0,0" />
            <TextBox Grid.Row="1" Grid.Column="2"
               Background="White"
               x:Name="ProductnameTextBox"
               Height="30"
               Width="170"
               Margin="5,5,5,5"
               Padding="5"/>

        </StackPanel>

        <StackPanel Grid.Column="3" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock x:Name="qtytextBlock" Grid.Row="1"
       Grid.Column="1"
       Text="Phone"
       Height="50"
       HorizontalAlignment="Center"
       Padding="5"
       FontSize="20"
       TextAlignment="Center"
       Foreground="Black"
       Background="White" 
       Width="170" Margin="0,60,0,0" />
            <TextBox Grid.Row="1" Grid.Column="2"
       Background="White"
       x:Name="qtytextBox"
       Height="30"
       Width="170"
       Margin="5,5,5,5"
       Padding="5"/>

        </StackPanel>


        <StackPanel Grid.Column="4" Margin="0,45,0,0" Grid.RowSpan="2" />

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,10,0,0">

            <Button FontSize="15"
                    Margin="-400,5,0,5"
                    Width="70"
                    Background="Green"
                    Foreground="White"
                    Padding="5"
                    
        >ADD</Button>

            <Button FontSize="15"
            Margin="-100,-37,0,5"
            Width="70"
            Background="Green"
            Foreground="White"
            Padding="5" Click="Button_Click"
            
        >EDIT</Button>

            <Button FontSize="15"
            Margin="200,-37,0,0"
            Width="70"
            Background="Maroon"
            Foreground="White"
            Padding="5"
            
>DELETE</Button>
        </StackPanel>

        <DataGrid 
                x:Name ="itemGrid" 
                Grid.Row="3"
                Grid.Column="1" 
                Grid.ColumnSpan="4" 
                Background="AliceBlue" Margin="0,2,0,0"/>
    </Grid>
</Window>
