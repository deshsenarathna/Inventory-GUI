<Window x:Class="Hardware.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hardware"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="966">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="194*" />
            
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="155*" />
            <RowDefinition Height="52*" />
            <RowDefinition Height="232*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
               HorizontalAlignment="Left"
               TextAlignment="Center"
               Background="Purple"
               Foreground="LightGray"
               FontWeight="Bold"
               FontSize="25px" 
               Padding="5"
               Text="Hardware Management System" Width="1000"/>

        <StackPanel Grid.Column="0" Grid.RowSpan="4" Background="Purple">

            <Image Width="123" Height="94"  Margin="0,40,0,-150" Source="/building-material-shop-illustration-isolated-on-white-background-building-material-shop-icon-vector.jpg"/>
            <Button FontSize="15"
                    Margin="0,200,0,0"
                    Width="90"
                    Background="#FFCB62EA"
                    Foreground="White"
                    Padding="5" Click="Button_Click" >Items</Button>

            <Button FontSize="15"
                    Margin="0,50,0,0"
                    Width="90"
                    Background="#FFCB62EA"
                    Foreground="White"
                    Padding="5"  >Customers</Button>

            <Button FontSize="15"
                    Margin="0,50,0,0"
                    Width="90"
                    Background="#FFCB62EA"
                    Foreground="White"
                    Padding="5" Click="dashboardButton_Click" >Dashboard</Button>

        </StackPanel>


        <StackPanel Grid.Column="1" Margin="0,45,0,0" Grid.RowSpan="2" >
            

            <TextBlock x:Name="customernametextBlock" Grid.Row="1"
                       Grid.Column="1"
                       Text="Customer Name"
                       Height="50"
                       HorizontalAlignment="Center"
                       Padding="5"
                       FontSize="20"
                       TextAlignment="Center"
                       Foreground="Black"
                       Background="White" 
                       Width="161" Margin="0,40,0,0" />
            <TextBox Grid.Row="1" Grid.Column="2"
           Background="White"
           x:Name="customernametextextBox"
           Height="30"
           Width="170"
           Margin="5,5,5,5"
           Padding="5"/>

        </StackPanel>


        <StackPanel Grid.Column="2" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock Grid.Column="2"
                       Grid.Row="1"
                       Text="Customer Management"
                       TextAlignment="Center"
                       Foreground="Red"
                       FontSize="20"
                       FontStyle="Normal"
                       
                       FontWeight="Bold"
                       />

            <TextBlock x:Name="gendertextBlock" Grid.Row="1"
               Grid.Column="1"
               Text="Gender"
               Height="50"
               HorizontalAlignment="Center"
               Padding="5"
               FontSize="20"
               TextAlignment="Center"
               Foreground="Black"
               Background="White" 
               Width="170" Margin="0,12,0,0" />
            <TextBox Grid.Row="1" Grid.Column="2"
               Background="White"
               x:Name="gendertextblock"
               Height="30"
               Width="170"
               Margin="5,5,5,5"
               Padding="5"/>

        </StackPanel>

        <StackPanel Grid.Column="3" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock x:Name="phonetextblock" Grid.Row="1"
       Grid.Column="1"
       Text="Phone"
       Height="50"
       HorizontalAlignment="Center"
       Padding="5"
       FontSize="20"
       TextAlignment="Center"
       Foreground="Black"
       Background="White" 
       Width="170" Margin="0,40,0,0" />
            <TextBox Grid.Row="1" Grid.Column="3"
       Background="White"
       x:Name="phonetextbox"
       Height="30"
       Width="170"
       Margin="5,5,5,5"
       Padding="5"/>

        </StackPanel>


        <StackPanel Grid.Column="4" Margin="0,45,0,0" Grid.RowSpan="2" />

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,10,0,0">

            <Button FontSize="15"
                    Margin="-400,6,0,5"
                    Width="70"
                    Height="30"
                    Background="Green"
                    Foreground="White"
                    Padding="5" Click="addButton_Click_c" 
                    
        >ADD</Button>

            <Button FontSize="15"
            Margin="-100,-40,0,5"
            Width="70"
            Height="30"
            Background="Green"
            Foreground="White"
            Padding="5" Click="editButton_Click_c" 
            
        >EDIT</Button>

            <Button FontSize="15"
            Margin="200,-45,0,0"
            Width="70"
            Height="30"
            Background="Maroon"
            Foreground="White"
            Padding="6" Click="deleteButton_Click_c"
            
>DELETE</Button>
        </StackPanel>

        <DataGrid 
    x:Name="customerGrid" 
    Grid.Row="3"
    Grid.Column="1" 
    Grid.ColumnSpan="4" 
    Background="White"
    Margin="0,2,0,0"/>


    </Grid>
</Window>
