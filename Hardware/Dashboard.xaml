<Window x:Class="Hardware.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hardware"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="206*" />
            <ColumnDefinition Width="194*" />

        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="155*" />
            <RowDefinition Height="52*" />
            <RowDefinition Height="232*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
               HorizontalAlignment="Left"
               TextAlignment="Center"
               Background="Purple"
               Foreground="LightGray"
               FontWeight="Bold"
               FontSize="25px" 
               Padding="5"
               Text="Hardware Management System" Width="1000"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="4">
            <Image Width="516" Height="399" Source="/AdobeStock_181658575.jpeg" RenderTransformOrigin="0.5,0.841"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.RowSpan="4" Background="Purple">

            <Image Width="123" Height="94"  Margin="0,40,0,-150" Source="/building-material-shop-illustration-isolated-on-white-background-building-material-shop-icon-vector.jpg"/>
            <Button FontSize="15"
                 Margin="0,200,0,0"
                 Width="90"
                 Background="#FFCB62EA"
                 Foreground="White"
                 Padding="5" Click="Button_Click" 
                 
 
  >Items</Button>

            <Button FontSize="15"
Margin="0,50,0,0"
Width="90"
Background="#FFCB62EA"
Foreground="White"
Padding="5" Click="CustomerButton_Click">Customers</Button>

            <Button FontSize="15"
     Margin="0,50,0,0"
     Width="90"
     Background="#FFCB62EA"
     Foreground="White"
     Padding="5" >Dashboard</Button>

        </StackPanel>


        <StackPanel Grid.Column="1" Margin="0,45,0,0" Grid.RowSpan="2" />


        <StackPanel Grid.Column="2" Margin="0,45,0,0" Grid.RowSpan="2" >

            <TextBlock Grid.Column="2"
                       Grid.Row="1"
                       Text="DASHBOARD"
                       TextAlignment="Center"
                       Foreground="Red"
                       FontSize="20"
                       FontStyle="Normal"
                       
                       FontWeight="Bold"
                       />

        </StackPanel>

        <StackPanel Grid.Column="3" Margin="0,45,0,0" Grid.RowSpan="2" />

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,10,0,0"/>
    </Grid>
</Window>
